@model ETicaretWeb.Models.DimUrunler

@{
    ViewData["Title"] = "Ürün Detayları";
}

<h1>Ürün Detayları</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Ürün Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrunAdi)
        </dd>
        <dt class="col-sm-2">
            Birim Fiyat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirimFiyat)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UrunKey" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
