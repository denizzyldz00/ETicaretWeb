@model ETicaretWeb.Models.DimUrunler

@{
    ViewData["Title"] = "Ürün Sil";
}

<h1>Ürün Sil</h1>

<h3>Bu ürünü silmek istediğinizden emin misiniz?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Ürün Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrunAdi)
        </dd>
        <dt class="col-sm-2">
            Birim Fiyat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirimFiyat)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UrunKey" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>
