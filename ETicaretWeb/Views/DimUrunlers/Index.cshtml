@model IEnumerable<ETicaretWeb.Models.DimUrunler>

@{
    ViewData["Title"] = "Ürünler";
}

<h1>Ürünler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Birim Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UrunAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.BirimFiyat)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UrunKey" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.UrunKey" class="btn btn-info btn-sm">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.UrunKey" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
