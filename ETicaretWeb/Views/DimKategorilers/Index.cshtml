@model IEnumerable<ETicaretWeb.Models.DimKategoriler>

@{
    ViewData["Title"] = "Kategoriler";
}

<h1>Kategoriler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KategoriAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.Aciklama)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.KategoriKey" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.KategoriKey" class="btn btn-info btn-sm">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.KategoriKey" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
