@model ETicaretWeb.Models.DimKategoriler

@{
    ViewData["Title"] = "Kategori Detayları";
}

<h1>Kategori Detayları</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Kategori Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KategoriAdi)
        </dd>
        <dt class="col-sm-2">
            Açıklama
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.KategoriKey" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
