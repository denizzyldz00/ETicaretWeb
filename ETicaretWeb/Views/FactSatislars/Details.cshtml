@model ETicaretWeb.Models.FactSatislar

@{
    ViewData["Title"] = "Satış Detayları";
}

<h1>Satış Detayları</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Müşteri
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusteriKeyNavigation.TamAd)
        </dd>
        <dt class="col-sm-2">
            Ürün
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrunKeyNavigation.UrunAdi)
        </dd>
        <dt class="col-sm-2">
            Satış Miktarı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SatisMiktari)
        </dd>
        <dt class="col-sm-2">
            Birim Fiyat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirimFiyat)
        </dd>
        <dt class="col-sm-2">
            Toplam Tutar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToplamTutar)
        </dd>
        <dt class="col-sm-2">
            İndirim Tutarı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IndirimTutari)
        </dd>
        <dt class="col-sm-2">
            Net Tutar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NetTutar)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SatisKey" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
