@model ETicaretWeb.Models.FactSatislar

@{
    ViewData["Title"] = "Yeni Satış";
}

<h1>Yeni Satış Ekle</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MusteriKey" class="control-label">Müşteri</label>
                <select asp-for="MusteriKey" class="form-control" asp-items="ViewBag.MusteriKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="UrunKey" class="control-label">Ürün</label>
                <select asp-for="UrunKey" class="form-control" asp-items="ViewBag.UrunKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="SatisMiktari" class="control-label">Satış Miktarı</label>
                <input asp-for="SatisMiktari" class="form-control" />
                <span asp-validation-for="SatisMiktari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirimFiyat" class="control-label">Birim Fiyat</label>
                <input asp-for="BirimFiyat" class="form-control" />
                <span asp-validation-for="BirimFiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndirimTutari" class="control-label">İndirim Tutarı</label>
                <input asp-for="IndirimTutari" class="form-control" />
                <span asp-validation-for="IndirimTutari" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
